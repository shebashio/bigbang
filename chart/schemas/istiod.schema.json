{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bigbang.dev/schemas/istiod/values.json",
  "title": "Big Bang Istiod Values Schema",
  "description": "JSON Schema for Big Bang Istiod Helm chart values.yaml",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "networkPolicies": {
      "type": "object",
      "description": "Network policy configuration",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable or disable the bundled network policies"
        },
        "controlPlaneCIDRs": {
          "type": "array",
          "description": "Configure which CIDRs istiod will be allowed to connect to when accessing the kube-apiserver; if none are specified, the chart will look up the default kubernetes EndpointSlice and use the addresses found there",
          "items": {
            "type": "string"
          }
        },
        "additionalPolicies": {
          "type": "array",
          "description": "A list of additional network policies to create in the release namespace",
          "items": {
            "type": "object"
          }
        }
      }
    },
    "additionalEnvoyFilters": {
      "type": "array",
      "description": "A list of additional EnvoyFilters to create in the release namespace",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the EnvoyFilter (required)"
          },
          "labels": {
            "type": "object",
            "description": "Labels for the EnvoyFilter (optional)",
            "additionalProperties": true
          },
          "annotations": {
            "type": "object",
            "description": "Annotations for the EnvoyFilter (optional)",
            "additionalProperties": true
          },
          "spec": {
            "type": "object",
            "description": "EnvoyFilter specification (required)",
            "additionalProperties": true
          }
        },
        "required": ["name", "spec"]
      }
    },
    "monitoring": {
      "type": "object",
      "description": "Monitoring configuration",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable or disable the bundled monitoring components and network policies"
        }
      }
    },
    "authservice": {
      "type": "object",
      "description": "Authservice configuration",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable or disable authservice"
        }
      }
    },
    "mtls": {
      "type": "object",
      "description": "Mutual TLS configuration",
      "additionalProperties": true,
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["STRICT", "PERMISSIVE", "DISABLE"],
          "description": "Set the mTLS mode for the istio-system namespace"
        }
      }
    },
    "defaultSecurityHeaders": {
      "type": "object",
      "description": "Default security headers configuration",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable or disable the default security headers"
        }
      }
    },
    "upstream": {
      "type": "object",
      "description": "Values to pass to the upstream istiod chart (https://github.com/istio/istio/blob/master/manifests/charts/istio-control/istio-discovery/values.yaml)",
      "additionalProperties": false,
      "properties": {
        "env": {
          "type": "object",
          "description": "Environment variables for istiod",
          "additionalProperties": true,
          "properties": {
            "ENABLE_NATIVE_SIDECARS": {
              "type": "string",
              "enum": ["true", "false"],
              "description": "Enable native sidecar support"
            }
          }
        },
        "meshConfig": {
          "type": "object",
          "description": "Istio mesh configuration",
          "additionalProperties": true,
          "properties": {
            "accessLogFile": {
              "type": "string",
              "description": "Access log file location"
            },
            "meshMTLS": {
              "type": "object",
              "description": "Mesh mTLS configuration",
              "additionalProperties": true,
              "properties": {
                "minProtocolVersion": {
                  "type": "string",
                  "enum": ["TLSV1_0", "TLSV1_1", "TLSV1_2", "TLSV1_3"],
                  "description": "Minimum TLS protocol version"
                }
              }
            }
          }
        },
        "global": {
          "type": "object",
          "description": "Global Istio configuration",
          "additionalProperties": true,
          "properties": {
            "hub": {
              "type": "string",
              "description": "Container registry hub for Istio images"
            },
            "tag": {
              "type": "string",
              "description": "Tag for Istio images"
            }
          }
        }
      }
    }
  }
}